// Màu cho tab và tag
@tabs-default-color: #ffffff; // Màu văn bản mặc định của tab
@tabs-default-bg: #121212; // Màu nền mặc định của tab
@tag-default-bg: #333; // Màu nền mặc định của tag

// Màu cho các thành phần form
