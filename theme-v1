@error-color: #f04134; // Màu cho thông báo lỗi
@warning-color: #ffbf00; // Màu cho thông báo cảnh báo

// Màu cho danh sách và menu
@menu-bg: #1e1e1e; // Màu nền cho menu
@menu-item-color: #ffffff; // Màu chữ cho mục menu
